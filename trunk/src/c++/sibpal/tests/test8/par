  region=chr3
}

sibpal
{
  trait_regression, single
  {
    trait = alc
    regression_method=w3
    use_pairs=both
    export_out=true
    print_correlation_matrix = D3S1297
    print_design_matrix = D3S1297, rows=all
  }
}
