}

#SEGREG segregation
segreg, out=dbh
{
  title="threemean"
  trait=sqrtdbh
  	
  resid
  {	
    option="equal_po_ss"
  	fm, val=0, fixed=true
  	ss, val=0, fixed=true
  }
  	
  mean_cov
  {
  	#covariate=fam1vall, val=0,fixed=false
  	covariate=fam1,val=0,fixed=false
  	covariate=fam2,val=0,fixed=false
  	covariate=fam3,val=0,fixed=false
  }
  	
  type_mean
  {
    option=three
  }

  transmission
  {
    option=homog_mendelian
  }

  output_options
  {
    type_prob=true
  }

  #transformation
  #{
  #option=box_cox
  #lambda1,val=0,fixed=false
  #lambda2,val=0,fixed=true
  #}
}

lodlink
{
  model, trait=dbh
  
  linkage_tests=true
  
  lods
  {
    option=none
  }  
}
